{
  "name": "@cereon/recharts",
  "version": "0.1.2",
  "description": "Reusable React dashboard chart card components for @cereon/dashboard built using Recharts library.",
  "type": "module",
  "keywords": [
    "react",
    "dashboard",
    "ui",
    "components",
    "cards",
    "recharts",
    "cereon-dashboard"
  ],
  "author": "Aditya Mishra <adimis.sde@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/adimis-ai/cereon-recharts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adimis-ai/cereon-recharts.git"
  },
  "bugs": {
    "url": "https://github.com/adimis-ai/cereon-recharts/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:bundle": "tsup",
    "build": "npm run clean && npm run build:bundle && npm run build:tsc",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings 0",
    "test": "vitest",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "install": "npm run build"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "framer-motion": ">=10.0.0",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "peerDependenciesMeta": {
    "framer-motion": {
      "optional": false
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.6.5",
    "lucide-react": "^0.475.0",
    "recharts": "2.15.4",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.2.4",
    "clsx": "^2.1.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.8",
    "@turbo/gen": "^2.4.2",
    "@types/node": "^20.19.9",
    "@types/react": ">=16",
    "@types/react-dom": ">=16",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.50.0",
    "react": ">=16",
    "react-dom": ">=16",
    "tailwindcss": "^4.0.8",
    "tsup": "^6.6.0",
    "typescript": "^5.9.2",
    "vite": "^6.2.0",
    "rimraf": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
